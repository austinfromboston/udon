= haml :'controls/label.html', {}, :field => field
%textarea{ { :id => field.id, :name => field.name }.merge( field.html_options ) }~ field.value
- if field.options[:wysiwyg]
  %script{ :type => 'text/javascript', :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js' }
  %link{ :href => "/stylesheets/static/jquery.wysiwyg.css", :media => 'screen', :rel=>'stylesheet', :type => 'text/css' }
  %script{ :type => 'text/javascript', :src => '/javascripts/jquery.wysiwyg.js' }
  %script{ :type => 'text/javascript' }
    :plain
    
      $(document).ready( function() {
        $('##{field.id}').wysiwyg();
      } );
